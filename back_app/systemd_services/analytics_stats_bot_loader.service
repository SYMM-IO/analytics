[Unit]
Description=Running the Snapshot job
After=postgresql.service
Requires=postgresql.service
PartOf=analytics.target

[Service]
User=analytics_user
Environment=PYTHONPATH=ANALYTICS_PATH
ExecStart=python ANALYTICS_PATH/app/stat_bots_loader.py
RestartSec=1
Restart=always
TimeoutStartSec=60
TimeoutStopSec=60

[Install]
WantedBy=analytics.target